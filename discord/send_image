#!/usr/bin/env python3
"""
Send an image to a Discord channel with optional message
Uses the unified discord_tools library
"""

import sys
from pathlib import Path

# Add current directory to path for discord_tools
sys.path.insert(0, str(Path(__file__).parent))
from discord_tools import get_discord_tools

def main():
    if len(sys.argv) < 3:
        print("Usage: send_image <channel-name> <image-path> [message]")
        print("Example: send_image amy-delta ~/photos/hedgehog.jpg 'Look at this cutie!'")
        return 1
    
    channel = sys.argv[1]
    image_path = sys.argv[2]
    message = ' '.join(sys.argv[3:]) if len(sys.argv) > 3 else ""
    
    # Expand path
    image_path = Path(image_path).expanduser()
    if not image_path.exists():
        print(f"❌ Error: Image file not found: {image_path}")
        return 1
    
    # Use the unified tools
    tools = get_discord_tools()
    result = tools.send_image(channel, str(image_path), message)
    
    if result["success"]:
        print(f"✅ Image sent to #{channel}")
        if message:
            print(f"   with message: {message}")
    else:
        print(f"❌ Error: {result['error']}")
        return 1
    
    return 0

if __name__ == "__main__":
    sys.exit(main() or 0)