#!/usr/bin/env python3
"""
Delete a Discord message
Uses the unified discord_tools library
"""

import sys
from pathlib import Path

# Add current directory to path for discord_tools
sys.path.insert(0, str(Path(__file__).parent))
from discord_tools import get_discord_tools

def main():
    if len(sys.argv) < 3:
        print("Usage: delete_message <channel-name> <message-id>")
        print("Example: delete_message amy-delta 1234567890")
        print("\nNote: You can only delete messages sent by this bot.")
        return 1
    
    channel = sys.argv[1]
    message_id = sys.argv[2]
    
    # Use the unified tools
    tools = get_discord_tools()
    result = tools.delete_message(channel, message_id)
    
    if result["success"]:
        print(f"✅ Message deleted from #{channel}")
    else:
        print(f"❌ Error: {result['error']}")
        return 1
    
    return 0

if __name__ == "__main__":
    sys.exit(main() or 0)