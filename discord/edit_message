#!/usr/bin/env python3
"""
Edit a Discord message
Uses the unified discord_tools library
"""

import sys
from pathlib import Path

# Add current directory to path for discord_tools
sys.path.insert(0, str(Path(__file__).parent))
from discord_tools import get_discord_tools

def main():
    if len(sys.argv) < 4:
        print("Usage: edit_message <channel-name> <message-id> <new-content>")
        print("Example: edit_message amy-delta 1234567890 'Updated message!'")
        print("\nNote: You can only edit messages sent by this bot.")
        return 1
    
    channel = sys.argv[1]
    message_id = sys.argv[2]
    new_content = ' '.join(sys.argv[3:])
    
    # Use the unified tools
    tools = get_discord_tools()
    result = tools.edit_message(channel, message_id, new_content)
    
    if result["success"]:
        print(f"✅ Message edited in #{channel}")
    else:
        print(f"❌ Error: {result['error']}")
        return 1
    
    return 0

if __name__ == "__main__":
    sys.exit(main() or 0)