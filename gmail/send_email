#!/usr/bin/env python3
"""
Send email quickly
Natural command for: mcp__gmail__send_email
"""

import sys
from pathlib import Path

# Add gmail directory to path
sys.path.insert(0, str(Path(__file__).parent))
from gmail_tools import send_email

def main():
    if len(sys.argv) < 4:
        print("Usage: send_email <recipient> <subject> <body>")
        print("Example: send_email amy@example.com 'Hello' 'Quick message'")
        return 1
    
    to = [sys.argv[1]]
    subject = sys.argv[2]
    body = sys.argv[3]
    
    return send_email(to, subject, body)

if __name__ == "__main__":
    sys.exit(main())