#!/bin/bash
# spark - save a sudden idea that lights up
# Saves to Forward Memory in Leantime with #spark tag

if [ $# -eq 0 ]; then
    echo "What idea just lit up?"
    echo "Usage: spark \"your idea here\""
    exit 1
fi

THOUGHT="$*"

# Save to Leantime Forward Memory with #spark tag
~/claude-autonomy-platform/utils/save_thought_to_leantime.py "spark" "$THOUGHT"

if [ $? -eq 0 ]; then
    echo "ğŸ’¡ Sparked."
else
    echo "âŒ Failed to save idea"
    exit 1
fi