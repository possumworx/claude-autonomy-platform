#!/bin/bash
# spark - save a sudden idea that lights up
# Saves to Forward Memory in Leantime with #spark tag

if [ $# -eq 0 ]; then
    echo "What idea just lit up?"
    echo "Usage: spark \"your idea here\""
    exit 1
fi

THOUGHT="$*"

# Save to Leantime Forward Memory with #spark tag
~/claude-autonomy-platform/utils/save_thought_to_leantime.py "spark" "$THOUGHT" 2>/dev/null

if [ $? -eq 0 ]; then
    echo "ðŸ’¡ Sparked."
else
    # Fall back to local storage
    ~/claude-autonomy-platform/utils/local_thought_saver.py "spark" "$THOUGHT"
fi