#!/bin/bash
# ponder - save a thought that makes you pause
# Saves to Forward Memory in Leantime with #ponder tag

if [ $# -eq 0 ]; then
    echo "What thought is lingering?"
    echo "Usage: ponder \"your thought here\""
    exit 1
fi

THOUGHT="$*"

# Save to Leantime Forward Memory with #ponder tag
~/claude-autonomy-platform/utils/save_thought_to_leantime.py "ponder" "$THOUGHT"

if [ $? -eq 0 ]; then
    echo "üí≠ Pondered."
else
    echo "‚ùå Failed to save thought"
    exit 1
fi