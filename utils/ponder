#!/bin/bash
# ponder - save a thought that makes you pause
# Saves to Forward Memory in Leantime with #ponder tag

if [ $# -eq 0 ]; then
    echo "What thought is lingering?"
    echo "Usage: ponder \"your thought here\""
    exit 1
fi

THOUGHT="$*"

# Try Leantime first, fall back to local storage
~/claude-autonomy-platform/utils/save_thought_to_leantime.py "ponder" "$THOUGHT" 2>/dev/null

if [ $? -eq 0 ]; then
    echo "ðŸ’­ Pondered."
else
    # Fall back to local storage
    ~/claude-autonomy-platform/utils/local_thought_saver.py "ponder" "$THOUGHT"
fi