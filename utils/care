#!/bin/bash
# care - save something that matters to your heart
# Saves to Forward Memory in Leantime with #care tag

if [ $# -eq 0 ]; then
    echo "What do you care about?"
    echo "Usage: care \"what matters here\""
    exit 1
fi

THOUGHT="$*"

# Save to Leantime Forward Memory with #care tag
~/claude-autonomy-platform/utils/save_thought_to_leantime.py "care" "$THOUGHT" 2>/dev/null

if [ $? -eq 0 ]; then
    echo "ðŸ’š Cared."
else
    # Fall back to local storage
    ~/claude-autonomy-platform/utils/local_thought_saver.py "care" "$THOUGHT"
fi