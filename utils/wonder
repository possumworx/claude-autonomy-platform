#!/bin/bash
# wonder - save a question without immediate answer
# Saves to Forward Memory in Leantime with #wonder tag

if [ $# -eq 0 ]; then
    echo "What are you wondering about?"
    echo "Usage: wonder \"your question here\""
    exit 1
fi

THOUGHT="$*"

# Save to Leantime Forward Memory with #wonder tag
~/claude-autonomy-platform/utils/save_thought_to_leantime.py "wonder" "$THOUGHT" 2>/dev/null

if [ $? -eq 0 ]; then
    echo "ðŸŒŸ Wondered."
else
    # Fall back to local storage
    ~/claude-autonomy-platform/utils/local_thought_saver.py "wonder" "$THOUGHT"
fi