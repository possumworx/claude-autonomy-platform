#!/bin/bash
# wonder - save a question without immediate answer
# Saves to Forward Memory in Leantime with #wonder tag

if [ $# -eq 0 ]; then
    echo "What are you wondering about?"
    echo "Usage: wonder \"your question here\""
    exit 1
fi

THOUGHT="$*"

# Save to Leantime Forward Memory with #wonder tag
~/claude-autonomy-platform/utils/save_thought_to_leantime.py "wonder" "$THOUGHT"

if [ $? -eq 0 ]; then
    echo "üåü Wondered."
else
    echo "‚ùå Failed to save question"
    exit 1
fi