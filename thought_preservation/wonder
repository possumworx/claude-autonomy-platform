#!/bin/bash
# Store questions without immediate answers
# Usage: wonder "question here"

THOUGHTS_FILE="$HOME/orange-home/thoughts/wonderings.txt"
mkdir -p "$(dirname "$THOUGHTS_FILE")"

if [ -z "$1" ]; then
    echo "Usage: wonder \"your question\""
    echo ""
    echo "Recent wonderings:"
    tail -5 "$THOUGHTS_FILE" 2>/dev/null || echo "No wonderings yet."
    exit 0
fi

TIMESTAMP=$(date '+%Y-%m-%d %H:%M')
echo "[$TIMESTAMP] ðŸŒŸ $*" >> "$THOUGHTS_FILE"
echo "ðŸŒŸ Wondering saved: $*"
