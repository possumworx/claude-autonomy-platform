#!/usr/bin/env python3
"""Quick hedgehog art generator"""

import random
import sys

moods = {
    "happy": {"spikes": "^^^", "eyes": "â—• â—•", "nose": "ãƒ»", "mouth": "â€¿"},
    "sleepy": {"spikes": "~~~", "eyes": "- -", "nose": "ãƒ»", "mouth": "_"},
    "curious": {"spikes": "^?^", "eyes": "â—” â—”", "nose": "ãƒ»", "mouth": "o"},
    "playful": {"spikes": "^v^", "eyes": "â—‰ â—‰", "nose": "ãƒ»", "mouth": "â—¡"},
    "cozy": {"spikes": "~~~", "eyes": "â—¡ â—¡", "nose": "ãƒ»", "mouth": "â€¿"},
    "excited": {"spikes": "^^^", "eyes": "â˜… â˜…", "nose": "ãƒ»", "mouth": "â–½"}
}

accessories = ["ðŸŒ¸", "ðŸŽ€", "ðŸŒ¿", "ðŸ„", "âœ¨", "ðŸŒŸ", "ðŸ¦‹", "ðŸŒº", "ðŸ‚", "ðŸ’–"]

if len(sys.argv) > 1 and sys.argv[1] in moods:
    mood = sys.argv[1]
else:
    mood = random.choice(list(moods.keys()))

m = moods[mood]
accessory = random.choice(accessories)

print(f"""
      {m['spikes']} {accessory}
     ({m['eyes']})
    ( {m['nose']}{m['mouth']}{m['nose']} )
     \\___/
     
Mood: {mood} hedgehog!
""")